@model Systree.Models.UserProfile

@{
    ViewBag.Title = "Registrarse";
}


@if (Session["UserName"] == null)
{
    <section class="container py-3" id="Login">

        @using (Html.BeginForm()) 
        {
            <article class="py-3">
                <h2><i class="fa fa-sign-in" aria-hidden="true"></i> Registrarse</h2>
                <hr />
                <span class="lead">Sistema de monitoreo, control y prevención de áreas verdes.</span>
            </article>

            <article class="py-3">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table>
                    <tr>
                        <td>Usuario: </td>
                        <td>@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr><td>&emsp;</td></tr>
                    <tr>
                        <td>Contraseña:&emsp;</td>
                        <td><input name="Password" type="password" class="form-control" /></td>
                        <td>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</td>
                    </tr>
                    @*<tr><td>&emsp;</td></tr>
                   <tr>
                        <td>Contraseña:&emsp;</td>
                        <td><input type="password" value="" class="form-control" /></td>
                        <td>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</td>
                    </tr>*@
                    <tr><td>&emsp;</td></tr>
                    <tr>
                        <td></td>
                        <td><input class="btn btn-block btn-success" type="submit" value="Registrarse" /></td>
                    </tr>
                </table>
            </article>
        }

    </section>
}

else
{
    Response.Redirect("Dashboard");
}